{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "jest",
      "@wdio/globals/types",
      "@wdio/cucumber-framework",
      "expect-webdriverio"
    ],
    "project": "./tsconfig.json",
    "baseUrl": ".",
    "paths": {
      "*": ["@types/*"]
    }
  },
  "include": [
    "step_definitions/**/*.ts",
    "support/**/*.ts",
    "utils/**/*.ts",
    "jest.config.cjs",
    "jest.setup.js",
    "cucumber.report.ts",
    "wdio.conf.ts",
    "wdio.ts"
  ]
}
